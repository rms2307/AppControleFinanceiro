    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppControleFinanceiro.Views.TransactionList"
    Title="TransactionList"
    NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Grid Padding="15" ColumnDefinitions="50, *, Auto">
            <Label Text="S" VerticalOptions="Center" HorizontalOptions="Center" Background="White" FontSize="20" TextColor="{StaticResource Black}"/>
            <VerticalStackLayout Grid.Column="1">
                <Label Text="SalÃ¡rio" TextColor="{StaticResource Black}"/>
                <Label Text="10/10/2022" TextColor="#BABABA"/>
            </VerticalStackLayout>
            <Label Text="R$ 3600,00" Grid.Column="2" TextColor="{StaticResource Tertiary}" VerticalOptions="Center"/>
        </Grid>

        <Border Margin="10" BackgroundColor="{StaticResource Black}" Stroke="Transparent" Padding="15" StrokeShape="RoundRectangle 30">
