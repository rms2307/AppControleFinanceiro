<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.TransactionAdd"
             Title="TransactionAdd">
    <VerticalStackLayout Spacing="10">
        <Border Background="Black" Padding="15" Stroke="Transparent" StrokeShape="RoundRectangle 30" Margin="15">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, 30">
                <Label 
                    Text="Novo"
                    HorizontalOptions="Center" 
                    Grid.Row="0"
                    Grid.Column="0"
                    TextColor="White" />
                <Label 
                    Text="X" 
                    HorizontalOptions="Center" 
                    Grid.Row="0" 
                    Grid.Column="1"
                    TextColor="White" />
            </Grid>
        </Border>

        <Grid ColumnDefinitions="*,*" Margin="30, 0">
            <RadioButton IsChecked="True" Content="Receita" Grid.Column="0" />
            <RadioButton HorizontalOptions="End" Content="Despesa" Grid.Column="1" />
        </Grid>

        <Entry Placeholder="Nome" Margin="15,0" />
        <DatePicker Margin="15,0" />
        <Entry Placeholder="Valor" Margin="15,0" />

        <Button Text="Salvar" Margin="15,0" HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>